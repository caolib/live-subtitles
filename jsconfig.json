{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "react",
		"checkJs": true
	},
	"include": ["src/**/*", "types/**/*", "index.html", "vite.config.*"],
	"exclude": ["node_modules", "dist", "target", ".tauri"]
}
