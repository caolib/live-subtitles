{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "live-subtitles",
  "version": "0.1.2",
  "identifier": "io.github.caolib.ls",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Live Subtitles",
        "width": 800,
        "height": 200,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": true,
        "x": 100,
        "y": 600,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/caolib/live-subtitles/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUzRDdCMzc5NTU0OUU3OTQKUldTVTUwbFZlYlBYVXpoYUhYQTZMWXlmNkp6aHFjVGJoUFRxUmlaWnF4Z0VpN01TcjhIaHhqNmkK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/binaries/*.dll": ".",
      "resources/styles/": "styles/",
      "resources/models/": "models/"
    },
    "windows": {
      "nsis": {
        "installerHooks": "./installer-hooks.nsh",
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico"
      }
    },
    "createUpdaterArtifacts": true
  }
}
